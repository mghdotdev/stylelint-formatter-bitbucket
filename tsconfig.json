{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["esnext"],
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"strict": false,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"downlevelIteration": true
	},
	"include": ["src/**/*"],
	"exclude": []
}